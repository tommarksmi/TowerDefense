#:kivy 1.0.7

<Base>:
    size: 50, 50
    size_hint: None, None
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.source

<Attacker>:
    size: 60, 60
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: self.source


<DefenseGame>:

    base: main_base
    label: message
    labelS: score


    Base:
        id: main_base
        center: self.parent.center

    Label:
        font_size: 15
        center_y: 10
        center_x: 600
        text: "Score: " + str(root.kill_count)
        id: score

    Label:
        font_size: 50
        center: self.parent.center
        text: root.message
        id: message